extends layout

block content
  title Pagina Classes
  .w3-container.w3-margin
    h1 Classes nivel 1
    table.w3-table-all
        tr
            th Codigo
            th Titulo
        tr
        each c in classes       
            tr
                td
                    a(href="/classes/" + c.codigo) #{c.codigo}
                td= c.titulo
    address Voltar atras - 
            a(href=referer) Voltar
    address Generated by CLAV-server - 
        a(href="/") HomePage       
        
    