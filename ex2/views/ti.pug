extends layout

block content
  title Pagina Termos de Indice
  .w3-container.w3-margin
    h1 Termos de Indice
    table.w3-table-all
        tr
            th Termo
            th Id Classe
            th Titulo Classe
        tr
        each t in ti       
            tr
                td= t.termo
                td
                    a(href="/classes/" + t.idClasse) #{t.idClasse}
                td
                    a(href="/classes/" + t.idClasse) #{t.tituloClasse}
    address Voltar atras - 
            a(href=referer) Voltar
    address Generated by CLAV-server - 
        a(href="/") HomePage       
        
