extends layout

block content
  title Pagina Classe - #{classe.codigo}
  .w3-container.w3-margin
    h1 Pagina Classe - #{classe.codigo}
    h3 Informacao geral
    table.w3-table-all
        tr
            th Nivel
            td= classe.nivel
        tr
            th Codigo
            td= classe.codigo
        tr
            th Titulo
            td= classe.titulo
        tr
            th Descricao
            td= classe.descricao
        tr
            th Status
            td= classe.status
    if descendentes.length > 0
        h3 Descendentes
        table.w3-table-all
                tr
                    th Codigo
                    th Titulo
                    th Id
                    th Status
                each d in descendentes
                    tr    
                        td
                            a(href="/classes/" + d.codigo) #{d.codigo}
                        td= d.titulo
                        td= d.id
                        td= d.status
    if ti
        h3 Termos de Indice
        table.w3-table-all
                tr
                    th Termo
                each t in ti
                    tr    
                        td
                            a(href="/termos/" + t.idTI) #{t.termo}
    address Voltar atras - 
            a(href=referer) Voltar
    address Generated by CLAV-server - 
        a(href="/") HomePage 